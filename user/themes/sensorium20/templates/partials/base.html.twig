{% set theme_config = attribute(config.themes, config.system.pages.theme) %}
{% set asser_ver = date().timestamp %} {# TODO remove for production to allow caching #}
{% set currentLang = grav.language.getLanguage %}
<!DOCTYPE html>
<html lang="{{ grav.language.getLanguage ?: 'en' }}" class="no-js">
<head>
{% block head %}
    <meta charset="utf-8" />
    <title> 
        {% if page.slug != 'modular' %}
            {% if header.title %}{{ header.title|e('html') }} | {% endif %}
        {% endif %}
        {{ site.title|e('html') }}
    </title>
    {% include 'partials/metadata.html.twig' %}
    {% include 'partials/favicons.html.twig' %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <link rel="canonical" href="{{ page.url(true, true) }}" />

    {% block stylesheets %}
        {# {% do assets.addCss('theme://css/fonts.css?v=20190306') %}
        {% do assets.addCss('theme://css/pure-0.5.0/grids-min.css', 103) %}
        {% do assets.addCss('theme://css-compiled/nucleus.css', 102) %}
        {% do assets.addCss('theme://css-compiled/template.css', 101) %}
        {% do assets.addCss('theme://css-compiled/template-customized.css?v=20190604', 101) %}
        {% do assets.addCss('theme://css/custom.css', 100) %}
        {% do assets.addCss('theme://css/font-awesome.min.css', 100) %}
        {% do assets.addCss('theme://css/slidebars.min.css') %}
        {% do assets.addCss('theme://css/tachyons.min.css') %}
        {% do assets.addCss('theme://css/slider.css') %} #}
        {% do assets.addCss('theme://dist/assets/css/app.css', {'pipeline':false}) %}

        {# {% if browser.getBrowser == 'msie' and browser.getVersion == 10 %}
            {% do assets.addCss('theme://css/nucleus-ie10.css') %}
        {% endif %} #}
        {# {% if browser.getBrowser == 'msie' and browser.getVersion >= 8 and browser.getVersion <= 9 %}
            {% do assets.addCss('theme://css/nucleus-ie9.css') %}
            {% do assets.addJs('theme://js/html5shiv-printshiv.min.js') %}
        {% endif %} #}
    {% endblock %}
    {{ assets.css() }}

    {% block javascripts %}
        {# {% do assets.addJs('jquery', 101) %}
        {% do assets.addJs('theme://js/modernizr.custom.71422.js', 100) %}
        {% do assets.addJs('theme://js/antimatter.js') %}
        {% do assets.addJs('theme://js/slidebars.min.js') %} 
        {% do assets.addJs('theme://js/masonry.pkgd.min.js') %}
        {% do assets.addJs('theme://js/programme.js') %}#}
        {% do assets.addJs('theme://js/lazyload.min.js') %}
        {% do assets.addJs('theme://dist/assets/js/app.js') %}
        {# {% do assets.addJs('theme://node_modules/js-offcanvas/src/js-offcanvas.js') %} #}
    {% endblock %}

    {# {% include 'partials/fb-pixel.html.twig' %} #}

{% endblock head %}
</head>
<body id="top" class="{{ page.header.body_classes }} {% block bodyclass %}{% endblock %}">
    {# {% block background %}{% endblock %} #}

    <div class="off-canvas-wrapper">
        <div class="off-canvas position-right" id="offCanvas" data-off-canvas data-transition="overlap">
          <!-- Your menu or Off-canvas content goes here -->
            {% block header_navigation %}
            {# {% include 'partials/navigation.html.twig' %} #}
            {% include 'partials/organisms/navigation-onpage.html.twig' %}
            {% endblock %}

            <p class="off-canvas__social">
                <a href="{{site.social_links.facebook}}">Facebook</a> <br>
            </p>
            <p class="off-canvas__social">
                <a href="{{site.social_links.twitter}}">Twitter</a> <br>
            </p>
            <p class="off-canvas__social">
                <a href="{{site.social_links.instagram}}">Instagram</a>
            </p>

            {% if config.plugins.langswitcher.enabled %}
            {% include 'partials/langswitcher.html.twig' %}
            {% endif %}

        </div>
        <div class="off-canvas-content" data-off-canvas-content>

            <header class="top-page-header">
                <div class="top-page-header__inner">
                    <div class="top-page-header__claimpart">
                        <p class="top-page-header__whatisit">
                            {# desktop, not scrolled #}
                            {% if currentLang == 'sk' %}
                                {% set festival_name = 'Festival digitálneho umenia a kultúry' %}
                            {% else %}
                                {% set festival_name = 'Festival of digital arts and culture' %}
                            {% endif %}

                            <span class="top-page-header__fulltitle">{{ festival_name }}, 28—30. 8. 2020, Bratislava</span>

                            {# mobile, not scrolled #}
                            <span class="top-page-header__microtitle">
                                {% if currentLang == 'sk' %}
                                    Festival <br>
                                    digitálneho umenia <br>
                                    a kultúry
                                {% else %}
                                    Festival <br>
                                    of digital arts <br>
                                    and culture
                                {% endif %}
                            </span>

                            {# scrolled desktop / mobile #}
                            {% if page.template != 'modular' %}
                            <a href="{{ home_url }}" title="Go back to home page" class="top-page-header__shorttitle">
                            {% else %}
                            <a href="#top" title="Go back to top" class="top-page-header__shorttitle" data-smooth-scroll>
                            {% endif %}
                                {# <span class="top-page-header__shorttitle"> #}
                                    SENSORIUM <br class="show-for-small-only">
                                    28–30. 8. 2020 <br class="show-for-small-only">
                                    Bratislava
                                {# </span> #}
                            </a> 
                        </p>                        
                    </div>
                    <div class="top-page-header__controlspart">
                        <a href="{{ config.site.ticket_url}}" class="button hollow buy-tickets body-type">
                            {{ (currentLang == 'en') ? 'Buy tickets' : 'Kúpiť lístky' }}
                        </a>
                        <button type="button" class="button clear body-type menu-button" data-toggle="offCanvas">
                            {# <i class="menu-button__icon">
                                <span></span>
                                <span></span>
                                <span></span>
                            </i> #}
                            <span class="menu-button__text">Menu</span>
                            <span class="menu-button__text--close">Close</span>{#  TODO language  #}
                        </button>
                    </div>
                </div>
            </header>

            <main class="page-body">
                <h1 class="grid-x grid-padding-x cell big-type page-title">
                    {% if page.template != 'modular' %}
                    <a href="{{ home_url }}" title="Go back to home page">
                    {% endif %}
                        Sensorium
                    {% if page.template != 'modular' %}
                    </a>
                    {% endif %}
                </h1>
          <!-- Your page content lives here -->
         {% block body %}
             {% block content %}{% endblock %}
         {% endblock %}
         {% block footer %}
             {% include 'partials/organisms/footer.html.twig' %}
            {{ assets.js() }}
         {% endblock %}
                
            </main>

        </div>
      </div>

